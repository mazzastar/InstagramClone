<%= form_for @post, html: {multipart: true} do |f| %>
	
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>
		
	<div class="form-group">
		<%= f.label :caption %>
		<%= f.text_area :caption , class: "form-control"%>
	</div>

	<div class="form-group">
		<%= f.label :tag_names, 'Hashtags'%>
		<%= f.text_field :tag_names, class: "form-control" , data: {role: 'tagsinput', placeholder: 'Add tags'}  %>
	</div>	

	<div class="form-group">
		<%= f.label :picture %>
		<%= f.file_field :picture, html: {'data-filename-placement' => 'inside'} %>
	</div>
 
	<%= f.submit buttonText, class: "btn btn-primary"%>

<% end %>