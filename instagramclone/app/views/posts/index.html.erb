<header class="jumbotron">
  <div class="page-header">
    <h1>Welcome to the Instagram Clone</h1>
  </div>
</header>

<!-- <p class="navbar-text pull-right"> -->
<% if user_signed_in? %>
  <div class="navbar-text pull-right">
    Logged in as <strong>Welcome <%= current_user.email %></strong>.
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-lg btn-success' %> 
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-lg btn-success'  %> 
    <%= link_to "New Post", new_post_path, :class => 'btn btn-lg btn-success'%>
  </div>

  <section class = "navbar-text pull-left">
    <% if @posts.any? %>
      <%= render @posts %>
  	
    <% else %> 
      <p>There are no posts yet</p>
    <% end %>
  </section>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>

    <h1>Not signed in </h1>

<% end %>

<!-- </p> -->
